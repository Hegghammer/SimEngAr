% Footer. If using navigation sidebar, comment out this section 
\setbeamertemplate{footline}
{
 \linethickness{0.05pt}\color{black!70}
 \framelatex{
  \begin{beamercolorbox}[leftskip=.3cm,sep=0.1cm]{Location bar}
  \usebeamerfont{section in head/foot}
  \insertshorttitle~|~\insertdate \hfill \insertemail
  \hfill
  \insertframenumber/\inserttotalframenumber
  \end{beamercolorbox}}
}

% Color associations
\setbeamercolor{background canvas}{bg=softwhite}
\setbeamercolor{title}{fg=olive}
\setbeamercolor{frametitle}{fg=olive}
\setbeamercolor{part title}{fg=olive}
\setbeamercolor{itemize item}{fg=black!70}
\setbeamercolor{itemize subitem}{fg=black!70}
\setbeamercolor{itemize subsubitem}{fg=black!70}
\setbeamercolor{Location bar}{fg=black!70,bg=gray!20}
\setbeamercolor{block title}{bg=olive!50, fg=white}
\setbeamercolor{block body}{bg=olive!10}

% Font styles
\setbeamerfont{title}{size=\huge,series=\bfseries}
\setbeamerfont{subtitle}{size=\Large}
\setbeamerfont{author}{size=\normalsize,series=\bfseries}
\setbeamerfont{institute}{size=\small}
\setbeamerfont{date}{size=\small}
\setbeamerfont{frametitle}{size=\Large,series=\bfseries}
\setbeamerfont{section in head/foot}{size=\tiny,series=\normalfont}
\setbeamerfont{itemize item}{size=\footnotesize}

% Other elements
\setbeamertemplate{itemize item}[triangle]
\setbeamertemplate{itemize subitem}[circle]
\setbeamertemplate{itemize subsubitem}[diamond]
\setbeamertemplate{frametitle}{\vspace*{10mm}\insertframetitle}
\setbeamertemplate{blocks}[rounded][shadow=true]
